<%include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-800 pt-1 text-white">
        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="prof-details flex flex-col items-center justify-center mt-20">
            <div class="relative">
                <span id="uploadicon" class="w-10 h-10 absolute bottom-0 right-0 flex items-center justify-center rounded-full bg-zinc-200"><i class="ri-pencil-line text-zinc-700"></i></span>
                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                    <img src="/images/uploads/<%= user.profileImage%>" class="w-full h-full object-cover" alt="">
                </div>
            </div>
            <h1 class="text-3xl font-semibold text-white mt-5"><%= user.name%></h1>
            <h3 class="text-md text-white">@<%= user.username%></h3>
            <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
            <a href="/add" class="px-10 py-2 rounded-lg bg-red-600 text-xs font-semibold mt-20">Add new post</a>
        </div>

        <div class="cards grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-10 px-10 mt-10 max-w-screen-lg mx-auto">
            <div class="card">
                <div class="bg-zinc-200  w-52 h-40 rounded-lg">
                    <img src="/images/uploads/<%= user?.posts[0]?.image %>" class="w-full h-full overflow-hidden object-cover" alt="">
                </div>
                <a href="/show/posts" class="text-xl font-semibold mt-3 text-white inline-block">Your uploaded pins</a>
                <h5 class="text-sm font-medium text-white opacity-80"><%= user.posts.length%> pins</h5>
            </div> 
        </div>
    </div>

    <script>
        document.querySelector('#uploadicon').addEventListener('click' , function(){
            document.querySelector("#uploadform input").click();
        })

        document.querySelector("#uploadform input").addEventListener('change' , function(){
            document.querySelector("#uploadform").submit();
        })
    </script>

<%include ./partials/footer.ejs %>