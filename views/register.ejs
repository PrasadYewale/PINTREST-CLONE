<%include ./partials/header.ejs %>

  <div class="w-full h-screen bg-center bg-cover bg-[url('https://cdn.prod.website-files.com/614716f50b4f49202fdd0087/640ebc9a6156279ef57cb601_how-to-make-a-video-collage.jpg')] flex items-center justify-center">
    <div class="w-[25vw] bg-white px-16 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center leading-none font-semibold text-zinc-700 tracking-tighter capitalize">Create an account</h1>
      <form action="/register" method="post">
        <input class = "rounded-md border-2 w-full px-3 py-2 mt-4" type="text" name="name" placeholder="Enter name">
        <input class = "rounded-md border-2 w-full px-3 py-2 mt-2" type="text" name="username" placeholder="Enter username">
        <input class = "rounded-md border-2 w-full px-3 py-2 mt-2" type="email" name="email" placeholder="Enter email">
        <input class = "rounded-md border-2 w-full px-3 py-2 mt-2" type="number" name="contact" placeholder="Enter contact number">
        <input class = "rounded-md border-2 w-full px-3 py-2 mt-2" type="password" name="password" placeholder="Enter password">
        <input class = "border-2 w-full px-3 py-2 mt-5 bg-red-600 text-white rounded-full" type="submit" value="Login">
        <p class="text-xs font-semibold text-zinc-500 mt-10 text-center w-3/3 mx-auto">By continuing, you agree to Pinterest's 
          Terms of Service
           and acknowledge you've read our 
          Privacy Policy
          . 
          Notice at collection
          </p>
      </form>
      <a class="w-full inline-block mt-7 text-sm font-semibold text-zinc-700 text-center" href="/">Already have an account?</a>
    </div>
  </div>

  <%include ./partials/footer.ejs %>