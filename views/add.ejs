<%include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white mt-16">
    <h1 class="text-xl">Create a new post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-6" name="postImage" type="file">
        <input class="text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-2" type="text" name="title" placeholder="Title">
        <textarea class="text-black block w-1/3 px-3 py-2 h-60 border-2 rounded-md mt-2" type="text" name="description" placeholder="Description"></textarea>
        <input class="block w-1/3 px-3 py-2 rounded-md mt-2 bg-red-700 " type="submit" value="Create a post">
    </form>
</div> 

<%include ./partials/footer.ejs %>